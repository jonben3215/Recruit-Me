<!DOCTYPE html>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="/css/stylesignup.css"/>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<div class="container">
            <form action="/views/signup.ejs" method="POST">
                <h2>Sign Up</h2>
                <div>
                    <label for="firstName" class="col-sm-3 control-label">Full Name</label>
                    <input type="text" id="firstName" name="name"placeholder="Enter First and Last Name" class="form-control" required>    
                </div>
                <div>
                    <label for="email" class="col-sm-3 control-label">Email</label>
                    <input type="email" id="email1" name="email" placeholder="Enter Email" class="form-control" required>
                </div>
                <div>
                    <label for="password" class="col-sm-3 control-label">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter Password" class="form-control" required>
                </div>
                <div>
                    <label for="birthDate" class="col-sm-3 control-label">Date of Birth</label>
                    <input type="date" id="birthDate" class="form-control">
                </div>
                <div>
                    <label for="university name" class="col-sm-3 control-label">University Name</label>
                    <input type="university name" id="university" placeholder="Enter University Name" class="form-control">
                </div>
                <div>
                    <label for="degree" class="col-sm-3 control-label">Degree Program</label>
                        <select id="degree" class="form-control">
                            <option>Choose option below</option>
                            <option>Bachelors</option>
                            <option>Masters</option>
                            <option>Doctoral</option>
                        </select>
                </div> 
                <div class="form-group">
                    <label class="control-label col-sm-3">Work Experience</label>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <input type="radio" id="no" value="No">No 
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <input type="radio" id="yes" value="Yes ">Yes
                                </label>
                            </div>
                            </div>
                        </div>
                    </div>
                
                
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button type="submit" class="btn btn-primary btn-block"style="position: relative; width: 300px; left:400px">Sign Up</button>
                    </div>
                </div>
            </form> 
        </div>
